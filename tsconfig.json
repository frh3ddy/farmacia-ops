{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@farmacia-ops/shared": ["apps/shared/src"],
      "@farmacia-ops/shared/*": ["apps/shared/src/*"]
    }
  },
  "include": ["apps/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}

